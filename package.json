{
  "name": "lucid-dream",
  "version": "0.0.1",
  "description": "Celeste map making tools written in node.js",
  "main": "lucid.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "coveralls": "^3.1.0",
    "docdash": "^1.2.0",
    "eslint": "^6.8.0",
    "jsdoc": "^3.6.4",
    "mkdirp": "^1.0.4",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "rmfr": "^2.0.0",
    "should": "^13.2.3"
  },
  "scripts": {
    "mocha": "nyc --reporter=html mocha -r should -r ./test/setup.js \"./test/**/*.test.js\"",
    "coveralls": "nyc --reporter=text-lcov mocha -r should -r ./test/setup.js \"./test/**/*.test.js\" | coveralls",
    "eslint": "eslint \"**/*.js\"",
    "test": "npm run eslint && npm run mocha",
    "ci": "npm run eslint && npm run coveralls",
    "docs": "jsdoc -c ./config/jsdoc.json"
  },
  "engines": {
    "node": ">=10"
  },
  "author": "BloodSweatAndCode",
  "license": "MIT"
}
